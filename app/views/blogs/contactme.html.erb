 
  

<div class="container">
	

	<div class="row">
		
			<div class="col-md-8">
				
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">INFORMACIÓN PERSONAL</h3>
				</div>
				<div class="panel-body">

				<ul>
					<li> Nombre de usuario: <%=  @blog.user.username  %></li>
					<li> Biografía: <%=  @blog.user.bio  %></li>
					<li> Útima conexión :<%=  @blog.user.last_sign_in_at  %></li>
					<li>Escribele a: <a href="mailto:<%= @blog.user.email%>"><%= @blog.user.email %></a></li>
				</ul>
					
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">REDES SOCIALES</h3>
				</div>
				<div class="panel-body">

				<ul class="list-inline">
					<li> <a href="http://www.twitter.com/<%= @blog.user.twitter %>" target="_blank"><%=  image_tag("twitter.png") %></a> </li>					
					<li> <a href="http://www.facebook.com/<%= @blog.user.twitter %>" target="_blank"><%=  image_tag("facebook.png") %></a></li>
					<li> <a href="http://www.linkedin.com/<%= @blog.user.twitter %>" target="_blank"><%=  image_tag("linkedin.png") %></a></li>
					<li> <a href="mailto:<%= @blog.user.twitter %>" target="_blank"><%=  image_tag("email.png") %></a></li>



				</ul>
					
				</div>
			</div>







			</div>

	</div>

</div>



 
